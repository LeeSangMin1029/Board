block append head
  script(defer type="module" src="/static/js/utils/FormValidation.js")

mixin inputableTag(tag, labelName, id, name, className, placeholder="", type="text")
  .col-md-6.mb-3
    .form-group
      label(for=id)
        h4= labelName
      case tag
        when "input"
          input(
            type=type
            id=id
            name=name
            class=className
            placeholder=placeholder)&attributes(attributes)
          span.error(aria-live="polite")
        when "textarea"
          textarea(
            type=type
            id=id
            name=name
            class=className
            placeholder=placeholder
            rows="3"): block
          span.error(aria-live="polite")
