extends ../components/partial/layout.pug

block content
  .main-container
    h5.card-title #{user.name}
    p.card-text #{user.id}
    small.text-muted: p createdAt : #{user.createdAt}
    if(user.updatedAt)
      small.text-muted: p updatedAt : #{user.updatedAt}
    a(class="btn btn-primary" href="/users") Back
    a(class="btn btn-primary" href=`/users/${user._id}/edit`) Edit
    form(
      method="POST"
      onsubmit="return confirm('Are you sure you want to delete this user?');")
      button(
        class="btn btn-primary"
        type="submit"
        formaction=`/users/${ user._id }?_method=DELETE`) Delete