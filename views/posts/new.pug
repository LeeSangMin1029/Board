extends ../components/partial/layout.pug
include ../components/form/formChildNode.pug

block append head
  script(defer type="module" src="/static/js/post/NewFormValidation.js")

block content
  .container
    h4 New Post
    form(method="POST" enctype="multipart/form-data" novalidate)
      fieldset
        .title-area
          label(for="title")
            h4 Title
          +userInputTag("input", "title", "postTitle", "uit-title", "title")
        .body-area
          label(for="body")
            h4 Body
          +userInputTag("textarea", "body", "postBody", "uit-body", "body")
        a(class="btn btn-primary mb-2" href="/posts") Back
        button(
        type="submit"
        class="btn btn-primary mb-2") Create