extends ../components/partial/layout.pug
include ../components/form/formChildNode.pug

block content
  .main-container
    h4 Edit Post
    form(action=`/posts/${post._id}` method="POST" enctype="multipart/form-data" novalidate)
      fieldset
        .input-area
          label(for="title")
            h4 Title
          +userInputTag("input", "title", "title", "uit", "title")(value=post.title)
        .input-area
          label(for="body")
            h4 Body
          +userInputTag("textarea", "body", "body", "uit", "body")= post.body
        a.btn(href=`/posts/${ post._id }`) Back
        button.btn.ml(type="submit") Edit